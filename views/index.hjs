<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link href='https://fonts.googleapis.com/css?family=Ubuntu:700,400,300' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <script src="/socket.io/socket.io.js"></script>
		<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script type="text/javascript" src="javascripts/paper-full.min.js"></script>
    <script type="text/paperscript" src="/javascripts/duodoodle.js" canvas="duodoodle"></script>
  </head>
  <body>

    <canvas id="duodoodle"></canvas>

    <div id="left-control">

      <div class="colors">
				<div class="color-tile tile-normal active" style="background-color:rgba(0,0,0,1);">&nbsp;</div>
				<div class="color-tile tile-normal" style="background-color:rgba(150,150,150,1);">&nbsp;</div>
				<div class="color-tile tile-normal" style="background-color:rgba(244, 67, 54,1);">&nbsp;</div>
				<div class="color-tile tile-normal" style="background-color:rgba(76, 175, 80,1);">&nbsp;</div>
				<div class="color-tile tile-normal" style="background-color:rgba(33, 150, 243,1);">&nbsp;</div>
				<div class="color-tile tile-normal" style="background-color:rgba(255, 193, 7,1);">&nbsp;</div>
				<div class="color-tile tile-normal" style="background-color:rgba(156, 39, 176,1);">&nbsp;</div>
				<div class="color-tile tile-normal" style="background-color:rgba(233, 30, 99,1);">&nbsp;</div>
				<div class="color-tile tile-normal" style="background-color:rgba(121, 85, 72,1);">&nbsp;</div>
				<div class="color-tile tile-normal" style="background-color:rgba(239,208,207,1);">&nbsp;</div>
			</div>

      <div class="tile-divider tile-normal"></div>

			<div class="mode">
				<div class="mode-tile tile-normal active" id="pen" >{{> pen }}</div>
				<div class="mode-tile tile-normal" id="erase" >{{> eraser }}</div>
			</div>

      <div class="tile-divider tile-normal"></div>

      <div class="tools">
				<div class="opacity-tile tile-normal" id="opacity"><span class="op100">{{> opacity }}</span></div>
        <div class="layer-tile tile-normal above" id="layer" >{{> layer }}</div>
			</div>

      <div class="tile-divider tile-normal"></div>

      <div class="size">
				<div class="size-tile tile-normal"><span class="circle circle-small">&nbsp;</span></div>
				<div class="size-tile tile-normal"><span class="circle circle-normal active">&nbsp;</span></div>
				<div class="size-tile tile-normal"><span class="circle circle-medium">&nbsp;</span></div>
				<div class="size-tile tile-normal"><span class="circle circle-large">&nbsp;</span></div>
			</div>

      <div class="tile-divider tile-normal"></div>

      <div class="clear">
				<div class="tools-tile tile-normal" id="trash">{{> trash }}</div>
			</div>

    </div> <!-- /#left-control -->

    <div id="room-info">
			<p><span id="room-name"></span><span id="room-count"></span></p>
		</div>

		<div id="made-by">
        <p>Made with <a href="https://nodejs.org/" target="_blank">node.js</a>. <a href="http://expressjs.com/" target="_blank">express</a> and <a href="http://socket.io/" target="_blank">socket.io</a> by <a href="http://wilbo.io/" target="_blank">wilbo</a>. </p>
    </div>

    <!-- joining modal -->
    <div class="modal-window" id="join-room-window">

			<div class="modal" id="join-room">

				<h5>Welcome to DuoDoodle!</h5>
				<p>Create a canvas to start drawing. Dont forget to share the name of your canvas with a friend.</p>

				<form action="" id="room-form">
            <input type="text" id="room-input" autocomplete="off" maxlength="17" autofocus placeholder="name your canvas" />
            <button type="submit" class="button">Start drawing</button>
            <div id="roomname-error"></div>
        </form>

			</div>
		</div>

  </body>
</html>
